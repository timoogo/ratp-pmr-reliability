generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EquipmentType {
  ASCENSEUR
  ESCALATOR
  PORTILLONS
  CABINES
}

model Station {
  id         String      @id @default(cuid())
  name       String
  code       String      @unique
  slug       String      @unique
  line       String
  family     String
  equipments Equipment[] // 1 station -> N Ã©quipements
  stationOrder      Int         @unique @map("order")

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Equipment {
  id          String         @id @default(cuid())
  type        EquipmentType
  status      String         // ex: "en service", "en panne"
  code        String         @unique
  stationId   String
  station     Station        @relation(fields: [stationId], references: [id])
  name        String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
